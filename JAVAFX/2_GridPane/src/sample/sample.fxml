<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.ColumnConstraints?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="top_center" hgap="10" vgap="10"
          gridLinesVisible="true">
    <!--

          alignment="top_center" ==> puts the screen on top center
        -->

    <padding>
        <Insets top="10"/>
    </padding>
    <!--

        creates 10 top padding
       -->

    <Button text="Button one" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <Button text="Button Two" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <Button text="Button Three" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <Button text="Button four" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <Button text="Button five" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    <Button text="Button six" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
    <Button text="really long button 10" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
    <!-- columns span takes two column -->
    <Button text="10" GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.halignment="RIGHT" />
    <!--
    GridPane.halignment="RIGHT"
            this will out the button to the right
           -->


    <!--
       in here buttons are created just like html form and text
       text is what the text will be for the button
         <Button text="Button one" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
          text means what the button will say
          for row.index is 0 means aculumn 0 on the same row and clumn
          if u go from left right i the value of column need to go up
          to go up and down row will go up
          gridLinesVisible="true" ==> makes it easy to see the lines
          alignment="top_center" ==> puts the screen on top center
        -->
</GridPane>